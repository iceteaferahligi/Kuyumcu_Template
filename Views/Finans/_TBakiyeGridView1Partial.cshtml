@{
    var grid = Html.DevExpress().GridView(settings => {
        settings.Name = "TBakiyeGridView1";
        settings.CallbackRouteValues = new { Controller = "Finans", Action = "TBakiyeGridView1Partial" };

        settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "Finans", Action = "TBakiyeGridView1PartialAddNew" };
        settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "Finans", Action = "TBakiyeGridView1PartialUpdate" };
        settings.SettingsEditing.DeleteRowRouteValues = new { Controller = "Finans", Action = "TBakiyeGridView1PartialDelete" };
        settings.SettingsEditing.Mode = GridViewEditingMode.EditFormAndDisplayRow;
        settings.SettingsBehavior.ConfirmDelete = true;

        settings.CommandColumn.Visible = true;
        settings.CommandColumn.ShowNewButton = true;
        settings.CommandColumn.ShowDeleteButton = true;
        settings.CommandColumn.ShowEditButton = true;

        settings.SettingsCommandButton.NewButton.Text = "Yeni";
        settings.SettingsCommandButton.DeleteButton.Text = "Sil";
        settings.SettingsCommandButton.EditButton.Text = "Düzenle";
        settings.SettingsCommandButton.CancelButton.Text = "Ýptal";
        settings.SettingsCommandButton.UpdateButton.Text = "Güncelle";

        settings.KeyFieldName = "id";

        settings.SettingsPager.Visible = true;
        settings.Settings.ShowGroupPanel = true;
        settings.Settings.ShowFilterRow = true;
        settings.SettingsBehavior.AllowSelectByRowClick = true;

        settings.SettingsAdaptivity.AdaptivityMode = GridViewAdaptivityMode.Off;
        settings.SettingsAdaptivity.AdaptiveColumnPosition = GridViewAdaptiveColumnPosition.Right;
        settings.SettingsAdaptivity.AdaptiveDetailColumnCount = 1;
        settings.SettingsAdaptivity.AllowOnlyOneAdaptiveDetailExpanded = false;
        settings.SettingsAdaptivity.HideDataCellsAtWindowInnerWidth = 0;

        settings.Columns.Add("ToptanciAdi");
        settings.Columns.Add("MagazaNo").Caption = "Þube No";
        settings.Columns.Add("Bakiye").Caption = "HAS";
        settings.Columns.Add("TlBakiye").Caption = "TL";
        settings.Columns.Add("EuroBakiye").Caption = "EURO";
        settings.Columns.Add("UsdBakiye").Caption = "USD";
        settings.Columns.Add("ChfBakiye").Caption = "CHF";
        settings.Columns.Add("StrlBakiye").Caption = "STERLÝN";
        settings.Columns.Add("CeyrekBakiye").Caption = "ÇEYREK";
        settings.Columns.Add("YiAyarBakiye").Caption = "22 AYAR";
        settings.Columns.Add("ToptanciTipi").Caption = "TÝPÝ";
    });
    if (ViewData["EditError"] != null){
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
	}
@grid.Bind(Model).GetHtml()