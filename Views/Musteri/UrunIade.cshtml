                    <div style="height: 360px;border-style:groove">
                        <img src="" alt=" " style="width: 100%;max-height: 100%" />
                    </div>
                    <div>
                        <!--Müşteri Adı-->
                        <div>
                            <label class="urunLabel" for="musteriAdi2">Müşteri Adı</label>
