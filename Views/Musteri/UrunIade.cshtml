    @using (Html.BeginForm("UrunIade2", "Musteri", FormMethod.Post))
    {
       
    <div>
        @{ Html.EnableClientValidation(false); }
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-9 col-sm-12 ">
                    <table id="urunIadeTablosu">

                        @Html.Action("IadeGridViewPartial")

                    </table>
                </div>
                <!--        ÜRÜN FOTOĞRAFI-->
