@model Kuyumcu.Models.Giris
@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Login Page</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/util.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/tilt.jquery.min.js"></script>

    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })

    </script>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <style type="text/css">
        .midsoft-logo-container {
            position: absolute;
            margin-top: -140px;
            margin-left: -30px;
        }

        .ercankardesler-logo-container {
            position: absolute;
            margin-top: -70px;
            margin-left: 200px;
        }
    </style>
</head>

<body>

    <div class="limiter">
        <div class="container-login100">

            <div class="wrap-login100">
                <div class="midsoft-logo-container">
                    <img src="~/Images/midsoftLogoSmall.png" alt="IMG" style="position: absolute;width:12em;">
                </div>
                <div class="ercankardesler-logo-container">
                    <img src="~/Images/ercankardeslerLogo.png" alt="IMG" style="position: absolute;width:12em;">
                </div>
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Images/img-01.png" alt="IMG">
                </div>
                @using (Html.BeginForm())
                {
                    <form class="login100-form validate-form" @*form action="Anasayfa"*@ method="post">
                        <span class="login100-form-title">
                            Kullanıcı Girişi
                        </span>
                        <div class="wrap-input100 validate-input">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @*<input class="input100" type="text" name="KullaniciAdi" placeholder = "Kullanıcı Adı" >*@
                            @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "input100", type = "text", name = "KullaniciAdi", placeholder = "Kullanıcı Adı" })
                            <div class="col-md-10">
                                @Html.ValidationMessageFor(model => model.KullaniciAdi, "", new { @class = "text-danger" })
                            </div>
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>

                        <div class="wrap-input100 validate-input">
                            @*<input class="input100" type="password" name="sifre" placeholder="Şifre">*@
                            @Html.TextBoxFor(x => x.Sifre, new { @class = "input100", type = "password", name = "sifre", placeholder = "Şifre" })
                            <div class="col-md-10">
                                @Html.ValidationMessageFor(model => model.Sifre, "", new { @class = "text-danger" })
                            </div>
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                            </span>
                        </div>

                        <div class="container-login100-form-btn">
                            <input type="submit" value="Giriş" class="login100-form-btn" />
                        </div>

                        <div class="text-center p-t-136">
                            <a class="txt2" href="http://www.midsoft.com.tr">
                                Bize Ulaşın
                                <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                            </a>
                        </div>
                    </form>
                }
            </div>
        </div>

    </div>

</body>

</html>